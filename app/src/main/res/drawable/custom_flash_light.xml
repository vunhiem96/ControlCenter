<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <layer-list>
            <item>

                <shape android:shape="rectangle">
                    <corners android:radius="10dp"></corners>
                    <solid android:color="#A6000000" />
                </shape>
            </item>
            <item android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp">
                <bitmap android:src="@drawable/ic_no_flashlight" />
            </item>
        </layer-list>

    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>

                <shape android:shape="rectangle">
                    <corners android:radius="10dp"></corners>
                    <solid android:color="#A6FFFFFF" />
                </shape>
            </item>
            <item android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp">
                <bitmap android:src="@drawable/ic_flashlight" />
            </item>
        </layer-list>
    </item>

</selector>